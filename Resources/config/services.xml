<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="agentsib_jsonrpc.serializer.class">AgentSIB\JsonRpcBundle\Server\JsonRpcSerializer</parameter>
        <parameter key="agentsib_jsonrpc.server.class">AgentSIB\JsonRpcBundle\Server\JsonRpcServer</parameter>
        <parameter key="agentsib_jsonrpc.router_loader.class">AgentSIB\JsonRpcBundle\Routing\JsonRpcLoader</parameter>
    </parameters>

    <services>
        <service id="agentsib_jsonrpc.serializer" class="%agentsib_jsonrpc.serializer.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="agentsib_jsonrpc.router_loader" class="%agentsib_jsonrpc.router_loader.class%" public="false">
            <tag name="routing.loader" />
        </service>

        <service id="agentsib_jsonrpc.server" class="%agentsib_jsonrpc.server.class%">
            <argument type="service" id="service_container" />
            <argument type="service" id="agentsib_jsonrpc.serializer" />
        </service>
    </services>

</container>
